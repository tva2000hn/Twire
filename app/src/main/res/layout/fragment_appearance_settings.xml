<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/settingsBackgroundColor"
    tools:context="com.perflyst.twire.fragments.AppearanceSettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/appearance_theme_color_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false">

                <RelativeLayout
                    android:id="@+id/appearance_theme_color_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_small_item_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/appearance_theme_color"
                        android:layout_width="@dimen/settings_theme_picket_color_size"
                        android:layout_height="@dimen/settings_theme_picket_color_size"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/settings_theme_picket_color_margin"
                        android:layout_marginEnd="@dimen/settings_theme_picket_color_margin"
                        android:layout_marginRight="@dimen/settings_theme_picket_color_margin"
                        android:src="@drawable/circle_theme_blue_chooser" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/appearance_theme_color_title"
                            style="@style/text_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/appearance_theme_color_title"
                            android:textAppearance="@style/text_settings_title" />

                        <TextView
                            android:id="@+id/appearance_theme_color_summary"
                            style="@style/text_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/blue_theme_name"
                            android:textAppearance="@style/sub_text_settings" />
                    </LinearLayout>

                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_divider_height"
                android:background="?attr/dividerColor" />

            <TextView
                style="@style/settings_header_style"
                android:text="@string/appearance_stream_header"
                android:textAppearance="@style/settings_header_text_style" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/appearance_streams_style_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false">

                <LinearLayout
                    android:id="@+id/appearance_streams_style_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_small_item_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appearance_streams_style_title"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/appearance_streams_style_title"
                        android:textAppearance="@style/text_settings_title" />

                    <TextView
                        android:id="@+id/appearance_streams_style_summary"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/sub_text_settings" />

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_divider_height"
                android:background="?attr/dividerColor" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/appearance_streams_size_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false">

                <LinearLayout
                    android:id="@+id/appearance_streams_size_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_small_item_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appearance_streams_size_title"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/appearance_streams_size_title"
                        android:textAppearance="@style/text_settings_title" />

                    <TextView
                        android:id="@+id/appearance_streams_size_summary"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/sub_text_settings" />

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_divider_height"
                android:background="?attr/dividerColor" />

            <TextView
                style="@style/settings_header_style"
                android:text="@string/appearance_game_header"
                android:textAppearance="@style/settings_header_text_style" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/appearance_game_style_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false">

                <LinearLayout
                    android:id="@+id/appearance_game_style_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_small_item_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appearance_game_style_title"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/appearance_game_style_title"
                        android:textAppearance="@style/text_settings_title" />

                    <TextView
                        android:id="@+id/appearance_game_style_summary"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/sub_text_settings" />

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_divider_height"
                android:background="?attr/dividerColor" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/appearance_game_size_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false">

                <LinearLayout
                    android:id="@+id/appearance_game_size_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_small_item_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appearance_game_size_title"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/appearance_game_size_title"
                        android:textAppearance="@style/text_settings_title" />

                    <TextView
                        android:id="@+id/appearance_game_size_summary"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/sub_text_settings" />

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_divider_height"
                android:background="?attr/dividerColor" />

            <TextView
                style="@style/settings_header_style"
                android:text="@string/appearance_streamer_header"
                android:textAppearance="@style/settings_header_text_style" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/appearance_streamer_style_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false">

                <LinearLayout
                    android:id="@+id/appearance_streamer_style_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_small_item_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appearance_streamer_style_title"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/appearance_streamer_style_title"
                        android:textAppearance="@style/text_settings_title" />

                    <TextView
                        android:id="@+id/appearance_streamer_style_summary"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/sub_text_settings" />

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_divider_height"
                android:background="?attr/dividerColor" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/appearance_streamer_size_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleDelayClick="false">

                <LinearLayout
                    android:id="@+id/appearance_streamer_size_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_small_item_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appearance_streamer_size_title"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/appearance_streamer_size_title"
                        android:textAppearance="@style/text_settings_title" />

                    <TextView
                        android:id="@+id/appearance_streamer_size_summary"
                        style="@style/text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/sub_text_settings" />

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_divider_height"
                android:background="?attr/dividerColor" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
