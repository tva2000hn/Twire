<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_streamerInfo_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_streamerInfo_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/fragment_streamerInfO_card_corner_radius"
        app:cardElevation="@dimen/fragment_streamerInfo_cardElevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/streamerInfo_rel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/streamerInfo_displayName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/streamerInfo_displayName_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/channel_info_name"
                android:textAppearance="@style/text_title" />

            <TextView
                android:id="@+id/streamerInfo_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/streamerInfo_displayName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:fontFamily="@string/font_roboto_light"
                android:gravity="center_horizontal"
                android:text="@string/channel_info_bio"
                android:textSize="@dimen/font_title_size" />

            <TextView
                android:id="@+id/streamerInfo_enable_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2000dp"
                android:text="@string/content_desc_twitchLogo_imageView" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
